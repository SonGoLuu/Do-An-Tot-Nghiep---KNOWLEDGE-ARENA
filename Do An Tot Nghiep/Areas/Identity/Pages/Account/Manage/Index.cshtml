@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row" style="color:white">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NguoiDung.HoVaTen" class="control-label"></label>
                <input asp-for="NguoiDung.HoVaTen" class="form-control" />
                <span asp-validation-for="NguoiDung.HoVaTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NguoiDung.NgaySinh" class="control-label"></label>
                <input asp-for="NguoiDung.NgaySinh" class="form-control" />
                <span asp-validation-for="NguoiDung.NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NguoiDung.GioiTinh" class="control-label"></label>
                <input asp-for="NguoiDung.GioiTinh" class="form-control" />
                <span asp-validation-for="NguoiDung.GioiTinh" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary" style="margin-top:30px">Save</button>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NguoiDung.QueQuan" class="control-label"></label>
                <input asp-for="NguoiDung.QueQuan" class="form-control" />
                <span asp-validation-for="NguoiDung.QueQuan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NguoiDung.TruongHoc" class="control-label"></label>
                <input asp-for="NguoiDung.TruongHoc" class="form-control" />
                <span asp-validation-for="NguoiDung.TruongHoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NguoiDung.Avatar" class="control-label"></label>
                <input asp-for="NguoiDung.Avatar" type="file" class="form-control" />
                <span asp-validation-for="NguoiDung.Avatar" class="text-danger"></span>
            </div>
            @if (Model.NguoiDung.Avatar != null)
            {
                <img style="width: 70px; height: 70px; border: none; z-index: 1; "
                     src="@Url.Content($"data:image/png;base64,{Convert.ToBase64String(Model.NguoiDung.Avatar)}")" />

            }
            else
            {
                <img style="width: 70px; height: 70px; border: none; z-index: 1; "
                     src="/avanew.png" />

            }
        </div>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}