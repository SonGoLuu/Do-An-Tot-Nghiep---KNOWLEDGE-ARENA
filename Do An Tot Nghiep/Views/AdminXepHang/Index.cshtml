@model IEnumerable<Do_An_Tot_Nghiep.Models.XepHang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h3 style="margin-left: 30px">Manage xephang</h3>>
<table class="table" style="color: white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiemNangLuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BacXepHang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NguoiDung)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DiemNangLuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BacXepHang.BacXepHangId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NguoiDung.NguoiDungId)
                </td>
                <td>
                    <a style="color: white; background-color: darkred; border-radius: 4px" asp-action="Edit" asp-route-id="@item.XepHangId">Edit</a> |
                    <a style="color: white; background-color: darkred; border-radius: 4px" asp-action="Details" asp-route-id="@item.XepHangId">Details</a> |
                    <a style="color: white; background-color: darkred; border-radius: 4px" asp-action="Delete" asp-route-id="@item.XepHangId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
