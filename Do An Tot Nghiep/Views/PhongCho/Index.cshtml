@model IEnumerable<Do_An_Tot_Nghiep.Models.PhongCho>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height: 750px">
    <h3 style="margin-left: 40px">Danh sách phòng</h3>

    <form method="post" action="@Url.Action("CreatePhong", "PhongCho")">
        <button style="margin-left: 40px ;margin-bottom: 10px ;color: white; background-color: darkred; border-radius: 4px;" type="submit">
        Tạo phòng mới
        </button>
    </form>

    @*<p style="margin-left: 20px">
            <a style="color: white; background-color: darkred; border-radius: 4px;" asp-action="Create">Create New</a>
        </p>*@
    <table class="table" style="color: white">
        <thead>
            <tr>
                <th>
                    Phòng Đấu
                </th>
                <th>
                    Số lượng người đã tham gia
                </th>
                <th>
                    Thời gian lập
                </th>
                <th>
                    Người tạo phòng
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhongChoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongNguoi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianLap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NguoiDung.HoVaTen)
                    </td>
                    <td>
                        <form method="post" action="@Url.Action("Join", "PhongCho", new { phongChoId = @item.PhongChoId })">
                            <button style="color: white; background-color: darkred; border-radius: 4px;" type="submit">Tham gia</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/jshub.js"></script>
