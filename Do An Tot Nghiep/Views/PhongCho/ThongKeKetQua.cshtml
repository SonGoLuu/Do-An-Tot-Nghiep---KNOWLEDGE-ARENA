@{
    Layout = null;
}
<!DOCTYPE html>

<html>

<head>

    <title>Example</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">

    <style>

        input[type="text"]:focus {
            outline: none;
            border-color: transparent;
        }

        body {
            margin: 0px;
            padding: 0px;
            height: 100%;
            background: linear-gradient(to bottom right, rgb(32, 32, 32), rgb(51, 51, 51));
        }

        .container {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            background: linear-gradient(to bottom right, rgb(32, 32, 32), rgb(51, 51, 51));
            background-size: cover;
            padding-top: 6px
        }


        .box {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 1920px;
            height: 50px;
            background: rgb(68, 68, 68);
            border-radius: 1px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
            margin-right: 3px;
        }


            .box p {
                color: white;
                font-weight: bold;
                font-family: 'Montserrat', sans-serif;
                font-size: 13px;
                margin-left: 20px;
                text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
            }


            .box span {
                color: white;
                font-weight: bold;
                font-family: 'Montserrat', sans-serif;
                font-size: 13px;
                margin-right: 20px;
                text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
            }

        .containercenter {
            display: flex;
            height: 860px;
            background-color: red
        }

        .box-center {
            width: 100%;
            height: 860px;
            background-color: #ccc;
            background: linear-gradient(to bottom right, rgb(32, 32, 32), rgb(51, 51, 51));
            justify-content: center;
            color: white;
            align-items: center;
        }

        .box-3 {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 1920px;
            height: 33px;
            background: rgb(68, 68, 68);
            border-radius: 1px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
            margin-right: 3px;
        }


            .box-3 p {
                margin: 0;
                color: white;
                font-weight: bold;
                font-family: 'Montserrat', sans-serif;
                font-size: 13px;
                text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
            }
    </style>

</head>

<body>
    <div class="containercenter">
        <div class="box-center">
            <div style="width: 400px; height: 20px; margin-left: 565px; margin-top: 50px;">

            </div>

            <div id="hienthiketquatungvong">

            </div>


        </div>
    </div>
</body>

</html>
<script src="~/js/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/jshub.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    var anh = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.anh));
    var htmlne = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.htmlne));
    var div = document.getElementById("hienthiketquatungvong");
    div.innerHTML = htmlne;

        $("#nguoiso1").attr("src", "data:image/png;base64," + anh[0]);
        $("#nguoiso2").attr("src", "data:image/png;base64," + anh[1]);
        $("#nguoiso3").attr("src", "data:image/png;base64," + anh[2]);
    $("#nguoiso4").attr("src", "data:image/png;base64," + anh[3]);

    var diem1 = @ViewBag.diem1;
    var diem2 = @ViewBag.diem2;
    var diem3 = @ViewBag.diem3;
    var diem4 = @ViewBag.diem4;
    var vongdauso = @ViewBag.vongdau;

    if (vongdauso == 4)
    {
        document.getElementById("dnl1").innerHTML = "+ " + diem1.toString() + " ĐIỂM NĂNG LỰC";
        document.getElementById("dnl2").innerHTML = "+ " + diem2.toString() + " ĐIỂM NĂNG LỰC";
        document.getElementById("dnl3").innerHTML = "+ " + diem3.toString() + " ĐIỂM NĂNG LỰC";
        document.getElementById("dnl4").innerHTML = "+ " + diem4.toString() + " ĐIỂM NĂNG LỰC";
    }

    //cộng điểm năng lực

    setTimeout(function () {
        var phongdauid = @ViewBag.phongdauso;
        var vongdau = @ViewBag.vongdau;
        var url = '@Url.Action("NavigateToChat", "PhongCho")';
        $.ajax({
            url: url,
            type: 'POST',
            data: { phongchoid: phongdauid, vongdau: vongdau
                },
            success: function (result) {
                console.log("Gọi hàm thành công");
            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
            }
        });
    }, 5000);
</script>

